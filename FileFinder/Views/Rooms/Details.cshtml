@model FileFinder.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h2>Room Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Building)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Building.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Building.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Building.Address)
        </dd>
    </dl>
</div>
<p></p>
<div>
    @if (Model.Files != null)
    {
        @foreach (var file in Model.Files)
        {
            // TODO: Fix Room Details to show better file details
            <p><a asp-controller="Files" asp-action="Details" asp-route-id="@file.ID"> @Html.DisplayFor(modelItem => file.ConsumerID) </a></p>

        }

    }

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to Room List</a>
</div>
